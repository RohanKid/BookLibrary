<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'layouts/leftside', book: @book, user: @user %>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
        <table class='table'>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
          <% @users.each do |users| %>
          <tr>
            <th><%= attachment_image_tag users, :profile_image, size:'100x100', fallback: "default-image.jpg" %></th>
            <th><%= users.name %></th>
            <th><%= link_to "Show", user_path(users.id) %></th>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>