<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <%= render 'layouts/leftside', book: @book, user: @user %>
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>              
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <% @books.each do |books| %>
          <tbody>
            <th class= style="width: 30%">
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "default-image.jpg" %>
              <% end %>
            </th>
            <th style="width: 40%">
              <%= link_to book_path(books.id) do %>
                <%= books.title %>
              <% end %></th>
            <th style="width: 30%"><%= books.body %></th>
            <th colspan="3"></th>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
