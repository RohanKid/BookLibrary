<div class="container">
  <div class="row">
    <div class="mx-auto" style="width: 470px;">
      <h2 class="mt-3">User Info</h2>
      <% if @user.errors.any? %>
        <h2>
          <%= @user.errors.count %> error prohibited this obj from being saved:
        </h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, class: "form-control", id:"inputName" %>
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <%= f.attachment_field :profile_image, class: "form-control", id:"image" %>
        </div>
        <div class="form-group">
          <label for="inputintro">Introduction</label>
          <%= f.text_area :introduction, class: "form-control ", id:"inputintro" %>
        </div>
        <div class="form-group mb-0 pb-0">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>