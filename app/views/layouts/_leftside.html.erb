<div class='col-md-3'>
  <h2>User info</h2>
    <table class='table'>
      <tr>
        <%= attachment_image_tag user, :profile_image, size:'100x100', fallback: "default-image.jpg" %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </table>
  <div class='row'>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  <h2 class="mt-3">New book</h2>
     <%= form_with model:book, local:true do |f| %>
     <div class="form-group">
          <label for="image">Image</label>
          <%= f.attachment_field :profile_image, class: "form-control", id:"image" %>
        </div>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control", id:"book_title" %>
      </div>
      <div class="form-group">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body, class: "form-control", id:"book_body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>
    <% end %>
</div>