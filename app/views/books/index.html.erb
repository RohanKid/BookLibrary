<div class='container px-5 px-sm-0'>
  <div class="d-flex flex-column">
    <% if @book.errors.any? %>
      <h3>
        <%= @book.errors.count %> error prohibited this obj from being saved:
      </h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class='row'>
    <%= render 'layouts/leftside', book: @book, user: @user %>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
        <table class='table table-hover'>
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <% @books.each do |books| %>
          <tbody>
            <th style="width: 10%">
              <%= link_to user_path(books.user.id) do %>
                <%= attachment_image_tag books, :book_image, size:'100x100', fallback: "default-image.jpg" %><br>
                <%= books.user.name %>
              <% end %>
            </th>
            <th style="width: 30%">
              <%= link_to book_path(books.id) do %>
                <%= books.title %>
              <% end %>
            </th>
            <th style="width: 60%"><%= books.body %></th>
            <th colspan="3"></th>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>